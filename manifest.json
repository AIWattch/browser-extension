{
  "name": "ChatGPT Emissions Tracker",
  "description": "",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "TODO popup",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "run_at" : "document_idle",
      "js": ["src/content.js"],
      "matches": ["https://chatgpt.com/*"],
      "css": ["src/content.css"]
    }
  ],
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ]
}
