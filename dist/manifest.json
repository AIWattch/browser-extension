{
  "name": "AI Wattch",
  "description": "AI Wattch is a Chrome extension that estimates and displays carbon emissions from your ChatGPT conversations.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content.js-loader-DP_BMf7p.js"
      ],
      "run_at": "document_idle",
      "matches": [
        "https://chatgpt.com/*"
      ],
      "css": [
        "assets/content-CbiQ6Eg3.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/*",
        "src/how-does-it-work.html",
        "src/admin.*"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "resources": [
        "assets/content-BbUgYAyj.js",
        "assets/content.js-pC9Wo0iR.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ]
}
